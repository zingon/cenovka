<?php $__env->startSection('script'); ?>
<script type="text/javascript">
var vystaven    = new Date(Date.parse(<?php echo json_encode($document->vystaven); ?>));
var expire      = new Date(Date.parse(<?php echo json_encode($document->expire); ?>));   
$(function() {
    $( "#vystaven" ).datepicker()
    $( "#vystaven" ).datepicker("option", "dateFormat","yy-mm-dd");
    $( "#vystaven" ).datepicker('setDate', vystaven);

    $( "#expire").datepicker();
    $( "#expire" ).datepicker("option", "dateFormat","yy-mm-dd");
    $( "#expire" ).datepicker('setDate',expire);
});
</script>
